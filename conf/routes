# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Articles
GET     /articles/edit/:id          controllers.Application.editArticle(id: Int)

GET     /articles/new               controllers.Application.newArticle

GET     /articles/new/:parentId     controllers.Application.newArticleWithParent(parentId:Int)

GET     /articles/:id               controllers.Application.article(id:Int)

POST    /articles                   controllers.Application.addArticle

GET     /articles/delete/:id        controllers.Application.deleteArticle(id:Int)

GET     /konspect/new               controllers.Application.newKonspect()

GET     /mainGraph/:id              controllers.Application.mainGraph(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    